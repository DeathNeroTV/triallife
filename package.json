{
    "name": "altv-triallife",
    "version": "0.1.2",
    "description": "a roleplay framework for alt:V",
    "author": "stuyk",
    "type": "module",
    "scripts": {
        "[-] Server Deployment Commands (They All Do Different Things)": "",
        "windows": "node ./scripts/runtime/index.js --start",
        "linux": "node ./scripts/runtime/index.js --start",
        "devtest": "node ./scripts/runtime/index.js --start --devtest",
        "dev": "node ./scripts/runtime/index.js --start --dev",
        "cdn": "node ./scripts/runtime/index.js --start --cdn",
        "[-] Updating, Installing, Cleanup": "",
        "update": "npx altv-pkg d release",
        "check": "tsc -p ./src/tsconfig.json | npx loose-ts-check --ignored-error-codes ./.loose-ts-check/ignore-codes.json --loosely-type-checked-files ./.loose-ts-check/loosely-type-checked-files.json | node ./scripts/fileChecker/index.js",
        "fix": "node ./scripts/doctor/index.js",
        "[-] Vue WebView Deployment": "",
        "vue-dev": "node ./scripts/plugins/webview && node ./scripts/plugins/files && npx vite ./src-webviews --clearScreen=false",
        "[-] Utility": "",
        "prepare": "husky install && husky-init",
        "lint": "prettier --end-of-line auto --config package.json --write ./src/**/*.ts"
    },
    "devDependencies": {
        "@babel/types": "^7.19.3",
        "@stuyk/altv-config": "^3.0.1",
        "@swc/cli": "0.1.57",
        "@swc/core": "1.2.171",
        "@types/glob": "^7.2.0",
        "@types/minimatch": "^3.0.5",
        "@types/mongodb": "^3.6.20",
        "@types/node": "^14.18.31",
        "@types/nodemailer": "^6.4.6",
        "@types/ps-node": "^0.1.1",
        "@types/sockjs": "^0.3.33",
        "@types/sockjs-client": "^1.5.1",
        "@vitejs/plugin-vue": "^2.3.4",
        "@vue/compiler-sfc": "^3.2.33",
        "altv-pkg": "^2.0.7",
        "fkill": "^8.0.1",
        "fs-extra": "^10.1.0",
        "glob": "^8.0.3",
        "husky": "^8.0.0",
        "husky-init": "^8.0.0",
        "loose-ts-check": "^1.2.0",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "stylus": "^0.58.1",
        "typescript": "4.6.3",
        "vite": "^2.9.15",
        "vue": "^3.2.33",
        "vue-tsc": "^0.34.17"
    },
    "dependencies": {
        "@altv/types-client": "^2.3.7",
        "@altv/types-natives": "^1.4.5",
        "@altv/types-server": "^2.5.0",
        "@altv/types-shared": "^1.3.1",
        "@altv/types-webview": "^1.0.4",
        "@altv/types-worker": "^1.0.7",
        "@discordjs/voice": "^0.11.0",
        "@stuyk/ezmongodb": "2.0.3",
        "@vuetify/vite-plugin": "^1.0.0-alpha.11",
        "axios": "0.26.1",
        "discord.js": "^14.5.0",
        "elliptic": "6.5.4",
        "njwt": "^1.2.0",
        "nodemailer": "^6.8.0",
        "pinia": "^2.0.22",
        "sjcl": "1.0.8",
        "sockjs": "0.3.21",
        "sockjs-client": "1.5.2",
        "vite-plugin-vuetify": "^1.0.0-alpha.17"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 180,
        "singleQuote": true,
        "semi": true,
        "arrowParens": "always",
        "trailingComma": "all"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint"
        }
    }
}
